@page "/"

@using Microsoft.AspNetCore.Components.Web

<PageTitle>Downpatch Wiki - speedrunning setup docs</PageTitle>

<HeadContent>
    <meta name="description"
          content="Downpatch is a community wiki for speedrunning setup. Find game-by-game notes on timing, versions, downpatching, and links to official community resources." />

    <link rel="canonical" href="https://downpatch.com/" />

    <meta property="og:title" content="Downpatch Wiki - speedrunning setup docs" />
    <meta property="og:description"
          content="Community-maintained setup docs for speedrunning, organized like a wiki." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://downpatch.com/" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Downpatch Wiki - speedrunning setup docs" />
    <meta name="twitter:description"
          content="Wiki-style setup help for speedrunning: timing, versions, and downpatching." />
</HeadContent>

<header class="home-hero" aria-labelledby="home-title">
    <div class="home-hero-inner">
        <p class="home-kicker">Wiki</p>
        <h1 id="home-title" class="home-title">Downpatch is a speedrunning setup wiki</h1>
        <p class="home-lead">
            Fast, practical reference pages for game setup, timing, versions, and downpatching.
        </p>

        <nav class="home-actions" aria-label="Primary actions">
            <a class="home-action primary" href="/guide">Browse guides</a>
            <a class="home-action" href="https://github.com/downpatch/content">Edit wiki content</a>
        </nav>
    </div>
</header>

<section class="home-body" aria-label="Wiki overview">
    <div class="home-cards">
        <section class="home-card" aria-labelledby="wiki-pages">
            <h2 id="wiki-pages" class="home-h2">What each page gives you</h2>
            <ul class="home-list">
                <li>Timing method and LiveSplit expectations</li>
                <li>Version requirements and downpatch notes</li>
                <li>Links to official guides, rules, and Discords</li>
            </ul>
        </section>

        <section class="home-card" aria-labelledby="use-it-fast">
            <h2 id="use-it-fast" class="home-h2">Use it in 30 seconds</h2>
            <ol class="home-list">
                <li>Open your game page in Guides</li>
                <li>Apply the listed setup for your category</li>
                <li>Follow links to community-owned resources</li>
            </ol>
        </section>

        <section class="home-card" aria-labelledby="contribute">
            <h2 id="contribute" class="home-h2">Community maintained</h2>
            <p class="muted">
                This wiki is maintained by contributors. If you spot outdated setup info, submit a fix.
            </p>
            <p class="muted">
                Downpatch aims to be fully WCAG compliant and handle hosting complexity so communities can focus on writing and improving content.
            </p>
            <p><a href="https://github.com/downpatch/content">Contribute content on GitHub</a></p>
        </section>
    </div>
</section>
