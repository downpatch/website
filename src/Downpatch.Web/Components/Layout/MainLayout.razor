@inherits LayoutComponentBase

@inject NavigationManager nav

<a class="skip-link" href="@skipLink">Skip to main content</a>

<header class="site-header">
    <div class="site-header-inner">
        <h1 class="site-brand">
            <a href="/" class="site-brand-link">downpatch.com</a>
        </h1>
    </div>
</header>

<main id="main" class="site-main" tabindex="-1">
    @Body

    <footer class="site-footer">
        <p>
            Downpatch is a community-maintained reference site.
            It is not affiliated with Valve, speedrun.com, or any game publisher.
        </p>
    </footer>
</main>

<nav class="sticky-links" aria-label="External links">
    <a class="sticky-btn" href="https://discord.gg/uvGWPTXx84" target="_blank" rel="noopener noreferrer">
        <i class="bi bi-discord" aria-hidden="true"></i>
        <span class="sticky-label">Discord</span>
        <span class="visually-hidden"> (opens in a new tab)</span>
    </a>

    <a class="sticky-btn" href="https://github.com/downpatch" target="_blank" rel="noopener noreferrer">
        <i class="bi bi-github" aria-hidden="true"></i>
        <span class="sticky-label">GitHub</span>
        <span class="visually-hidden"> (opens in a new tab)</span>
    </a>
</nav>

@code {

    private string skipLink => nav.Uri + "#main";




}